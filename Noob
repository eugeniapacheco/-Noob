      public void Iwillkickurass()
         
          Random r = new Random();

            // player 1
            int hp1 = r.Next(100, 201);
            int atPower1 = r.Next(10, 51);

            //player 2
            int hp2 = r.Next(100, 201);
            int atPower2 = r.Next(10, 51);

            Console.WriteLine("...... Player 1 stats......");
            Console.WriteLine("hpOne:" + hp1);
            Console.WriteLine("attackPowerOne:" + atPower1);

            Console.WriteLine("...... Player 2 stats......");
            Console.WriteLine("hpTwo:" + hp2);
            Console.WriteLine("attackPowerTwo:" + atPower2);
            
            if (hp1 >= hp2)
            {
                Console.WriteLine("Player 1 win!");
            }
            else {
                Console.WriteLine("Player 2 win!");
            }
            
