        public void FightorFlight()
        {
        
        Random r = new Random();
            int p1X = r.Next(0, 501);
            int p1Y = r.Next(0, 501);

            int p2X = r.Next(0, 501);
            int p2Y = r.Next(0, 501);

            double hip = Math.Sqrt(p1X * p2X + p1Y * p2Y);
            Console.WriteLine(+hip);

            if (hip < 20)
            {
                Console.WriteLine(" player 2 out the map");
            }
