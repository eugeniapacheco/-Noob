      public void LuckyBastard()
         {
         
         Random r = new Random() ;
         int maxHp = 100;
         int current Hp = maxHp;
         int blow;
         
         //attack 1
         Console.WriteLine (...... 1st attack......);
         blow = (int)(r.Next(1,(int) currentHp*0,98f)));
         Console.WriteLine ("You were attacked by an enemy for "+blow+" damage");
         currentHp -= blow;
         Console.WriteLine ("You current life "+currentHp+"!");
         Console.WriteLine("break");
         
         //attack 2
         Console.WriteLine (...... 2nd attack......);
         blow = (int)(r.Next(1,(int) currentHp*0,98f)));
         Console.WriteLine ("You were attacked by an enemy for "+blow+" damage");
         currentHp -= blow;
         Console.WriteLine ("You current life "+currentHp+"!");
         Console.WriteLine("break");
         
         //attack 3
         Console.WriteLine (...... 3rd attack......);
         blow = (int) currentHp - 1;
         Console.WriteLine ("You were attacked by an enemy for "+blow+"!");
         currentHp -= blow;
         Console.WriteLine ("You continued with "+currentHp+" HP! Lucky Bastar!");
         }
        
           
       public void Vegito()
         {
         
         Random r = new Random();
         
         //player 1
         int at1 = r.Next(0,101); 
         int def1 = r.Next(0,101);
         int inte1 = r.Next(0,101); 
         
         //player 2
         int at2 = r.Next(0,101); 
         int def2 = r.Next(0,101);
         int inte2 = r.Next(0,101); 
        
        Console.WriteLine ("...... Fusion ......");
        Console.WriteLine ("Attack:" +(at1 + at2)/2);
        Console.WriteLine ("Defenses:" +(def1 + def2)/2);
        Console.WriteLine ("Intellect:" +(inte1 + inte)/2);
        }
        
