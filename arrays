    public void Raid() 
    {
    Random r = new Random();
            int[] jogadores = new int[20];
            String[] classes = { "guerreiros", "guardiÃµes", "magos", "cavaleiros", "reis", "burgueses" };
            for (int i = 0; i < jogadores.Length; i++)
            {
                int cindex = r.Next(classes.Length);
                jogadores[i] = cindex;
                Console.WriteLine("Classe {0}", classes[cindex]);
 }
